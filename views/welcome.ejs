<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    :root{
      --bg-1:#0f0a1a;
      --bg-2:#0b0b16;
      --bg-3:#1b1030;
      --brand:#7a3ff3;
      --brand-2:#a855f7;
      --text:#e7e7ee;
      --muted:#b9b8c8;
      --chip:#201a33;
      --chip-border:#2b2342;
      --btn:#7b5cff;
      --btn-2:#4338ca;
      --accent-cyan:#22d3ee;
      --accent-pink:#ff59d7;
      --accent-blue:#60a5fa;
      --maxw:1180px;
    }

    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0;
      font-family:Inter, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      color:var(--text);
      background:
        radial-gradient(1000px 500px at 20% -10%, rgba(122,63,243,.45), transparent 60%),
        radial-gradient(900px 500px at 85% 0%, rgba(96,165,250,.35), transparent 60%),
        radial-gradient(700px 400px at 60% 80%, rgba(34,211,238,.15), transparent 70%),
        linear-gradient(160deg, var(--bg-3), var(--bg-1) 40%, var(--bg-2));
      background-attachment: fixed;
    }

    .bar{
      background:linear-gradient(90deg, var(--brand), var(--accent-pink));
      color:white;
      padding:.55rem 1rem;
      text-align:center;
      font-weight:600;
      font-size:.95rem;
    }
    .bar a{
      display:inline-block; margin-left:.65rem; padding:.35rem .7rem; border-radius:999px;
      background:rgba(255,255,255,.15); color:#fff; text-decoration:none; font-weight:700;
    }

    .nav{max-width:var(--maxw); margin:0 auto; display:flex; align-items:center; justify-content:space-between; padding:18px 20px;}
    .brand{display:flex; align-items:center; gap:.7rem; font-weight:800; letter-spacing:.1px;}
    .logo{
      width:36px; height:36px; border-radius:9px;
      background:linear-gradient(135deg, var(--brand), var(--accent-blue));
      display:grid; place-items:center; font-weight:900; color:#fff;
      box-shadow:0 8px 32px rgba(122,63,243,.35);
    }
    .nav-links{display:flex; gap:22px; align-items:center;}
    .nav-links a{color:var(--muted); text-decoration:none; font-weight:600}
    .nav-cta{display:flex; gap:12px; align-items:center}
    .btn{appearance:none; border:none; cursor:pointer; font-weight:800; border-radius:12px; padding:12px 18px; font-size:.95rem; text-decoration:none; display:inline-block}
    .btn.primary{
      color:#0b0b14; background:linear-gradient(135deg, var(--btn), var(--accent-cyan));
      box-shadow:0 12px 40px rgba(124,58,237,.35);
    }
    .btn.secondary{ color:#fff; background:transparent; border:1px solid #3a3253; }

    .hero{max-width:var(--maxw); margin:30px auto 80px; padding:0 20px 60px; position:relative}
    .headline{ text-align:center; }
    .headline h1{
      font-size:clamp(28px, 4.6vw, 54px);
      line-height:1.08; margin:8px auto 14px; font-weight:800; letter-spacing:.2px;
    }
    .headline .sub{color:var(--muted); font-weight:600; letter-spacing:.2px}
    .gradient-text{
      display:inline-block;
      background:conic-gradient(from 210deg, var(--accent-blue), var(--brand), var(--accent-pink), var(--accent-cyan));
      -webkit-background-clip:text; background-clip:text; color:transparent;
      text-shadow:0 0 0 rgba(0,0,0,0);
    }

    .cta-row{ margin:26px auto 8px; display:flex; gap:14px; justify-content:center; flex-wrap:wrap }
    .micro{ text-align:center; color:#a7a6b7; font-size:.9rem; margin-top:4px }

    .trust{ display:flex; gap:14px; justify-content:center; flex-wrap:wrap; margin:40px auto 0; }
    .chip{
      display:flex; align-items:center; gap:10px;
      background:linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,.02));
      border:1px solid var(--chip-border);
      color:#d7d6e4; padding:10px 14px; border-radius:999px; font-weight:700; font-size:.92rem;
      backdrop-filter: blur(2px);
    }
    .dot{width:8px; height:8px; border-radius:999px; background:rgba(255,255,255,.7)}

    .section{ background:#fff; color:#0d0d16; border-top-left-radius:18px; border-top-right-radius:18px; margin-top:70px; padding:50px 20px }
    .section h2{ max-width:var(--maxw); margin:0 auto; font-size:clamp(28px, 4vw, 44px); line-height:1.18 }
    .section em{ background:linear-gradient(90deg, #5b21b6, #22d3ee); -webkit-background-clip:text; background-clip:text; color:transparent; font-style:normal; font-weight:800 }

    @media (max-width:980px){
      .nav-links{display:none}
    }
  </style>
</head>
